<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="BaseEccentricGun">
        <defName>Eccentric_Gun_L20SAW</defName>
        <label>L20P charge SAW</label>
        <description>The L20P is a further modification of the L20C machine gun.\n\nChambered for the same cartridge as the E-15 and E9C infantry rifles, it trades stopping power for mobility and volume of fire.</description>
        <graphicData>
            <texPath>Things/Eccentric/Weapons/L20C_SAW</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>

        <statBases>
            <WorkToMake>60000</WorkToMake>
            <Mass>5.75</Mass>
            <Bulk>10.50</Bulk>
            <SightsEfficiency>1.1</SightsEfficiency>
            <ShotSpread>0.08</ShotSpread>
            <SwayFactor>1.18</SwayFactor>
            <RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
            <BipodStats>0</BipodStats>
        </statBases>
        <costList>
            <Steel>25</Steel>
            <Plasteel>25</Plasteel>
            <ComponentIndustrial>6</ComponentIndustrial>
            <Eccentric_HexCell>2</Eccentric_HexCell>
            <Chemfuel>20</Chemfuel>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Eccentric_ChargedShot</researchPrerequisite>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>EccentricHeavyRifle</li>
        </weaponTags>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Eccentric6x45mmCharged</defaultProjectile>
                <burstShotCount>10</burstShotCount>
                <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
                <warmupTime>1.0</warmupTime>
                <range>56</range>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <recoilPattern>Mounted</recoilPattern>
                <recoilAmount>1.25</recoilAmount>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>200</magazineSize>
                <reloadTime>5.5</reloadTime>
                <ammoSet>AmmoSet_6x45mmCharged</ammoSet>
            </li>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>false</aiUseBurstMode>
                <aimedBurstShotCount>5</aimedBurstShotCount>
                <aiAimMode>SuppressFire</aiAimMode>
            </li>
            <li Class="CombatExtended.CompProperties_BipodComp">
                <catDef>bipodSAW</catDef>
                <additionalrange>4</additionalrange>
                <ticksToSetUp>150</ticksToSetUp>
                <recoilMulton>0.9</recoilMulton>
                <recoilMultoff>1.15</recoilMultoff>
                <warmupMult>0.9</warmupMult>
                <warmupPenalty>1.1</warmupPenalty>
                <swayMult>1</swayMult>
                <swayPenalty>1.1</swayPenalty>
            </li>
        </comps>
        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <chanceFactor>1.5</chanceFactor>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2.02</cooldownTime>
                <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>muzzle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="BaseEccentricGun">
        <defName>Eccentric_Gun_M5RR</defName>
        <label>M5 recoilless rifle</label>
        <tickerType>Normal</tickerType>
        <description>The M5 recoilless rifle is a heavy, reloadable, shoulder-fired launcher.\n\nUtilizing similar technology to the electrothermal ignition charges used in charge rifles, the M5 fires a heavy shell with a large payload.\n\nCompared to conventional recoilless rifles, the M5 delivers a significantly more powerful warhead at greatly increased cost.</description>
        <graphicData>
            <texPath>Things/Eccentric/Weapons/M5</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>

        <statBases>
            <WorkToMake>85000</WorkToMake>
            <Mass>9.25</Mass>
            <Bulk>10</Bulk>
            <SightsEfficiency>1.25</SightsEfficiency>
            <ShotSpread>0.15</ShotSpread>
            <SwayFactor>2.4</SwayFactor>
            <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>120</Steel>
            <Plasteel>40</Plasteel>
            <ComponentIndustrial>6</ComponentIndustrial>
            <Eccentric_HexCell>4</Eccentric_HexCell>
            <Chemfuel>40</Chemfuel>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Eccentric_ChargedLaunchers</researchPrerequisite>
            <recipeUsers Inherit="False">
                <li>EccentricNanoassembler</li>
                <li>FabricationBench</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags Inherit="False">
            <li>EccentricGun</li>
            <li>EccentricLauncher</li>
        </weaponTags>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Eccentric84x254mmChargedRockets_HEDP</defaultProjectile>
                <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
                <warmupTime>2</warmupTime>
                <range>60</range>
                <minRange>5</minRange>
                <burstShotCount>1</burstShotCount>
                <muzzleFlashScale>14</muzzleFlashScale>
                <soundCast>InfernoCannon_Fire</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>1</magazineSize>
                <reloadTime>4.5</reloadTime>
                <ammoSet>AmmoSet_84x254mmChargedRockets</ammoSet>
            </li>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>false</aiUseBurstMode>
                <aiAimMode>AimedShot</aiAimMode>
            </li>
        </comps>
        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2.44</cooldownTime>
                <armorPenetrationBlunt>3.5</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
            </li>
        </tools>
    </ThingDef>

</Defs>