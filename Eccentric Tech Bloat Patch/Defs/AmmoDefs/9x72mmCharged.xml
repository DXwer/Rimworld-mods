    <!--  Projectiles  -->

    <ThingDef Name="BaseEccentric9x72mmChargedBullet" ParentName="Base8x50mmChargedBullet" Abstract="True">
        <thingClass>EccentricProjectiles.ProjectileCE_WithEffects</thingClass>
        <graphicData>
            <texPath>Things/Eccentric/Projectile/ChargeProjectile_Large</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
