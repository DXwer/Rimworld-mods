            </li>
        </modExtensions>
    </ThingDef>

    <!--Standard-->

    <ThingDef ParentName="BaseEccentric9x72mmChargedBullet">
        <defName>Bullet_Eccentric9x72mmCharged</defName>
        <label>9x72mm Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>34</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>10</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>35</armorPenetrationSharp>
