    </ThingDef>

    <!--Standard-->

    <ThingDef ParentName="BaseEccentric8x55mmChargedBullet">
        <defName>Bullet_Eccentric8x55mmCharged</defName>
        <label>8x55mm Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>25</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>8</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>27</armorPenetrationSharp>
