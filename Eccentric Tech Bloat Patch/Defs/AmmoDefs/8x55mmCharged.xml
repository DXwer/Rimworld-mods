    <!--  Projectiles  -->

    <ThingDef Name="BaseEccentric8x55mmChargedBullet" ParentName="Base8x35mmChargedBullet" Abstract="True">
        <thingClass>EccentricProjectiles.ProjectileCE_WithEffects</thingClass>
        <graphicData>
            <texPath>Things/Eccentric/Projectile/ChargeProjectile_Medium</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
