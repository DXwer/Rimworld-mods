    <RecipeDef ParentName="AmmoRecipeBase">
        <defName>MakeAmmo_8x55mmCharged</defName>
        <label>make 8x55mm Charged cartridge x500</label>
        <description>Craft 500 8x55mm Charged cartridges.</description>
        <jobString>Making 8x55mm Charged cartridges.</jobString>
        <researchPrerequisite>Eccentric_HighCaliberCharge</researchPrerequisite>
        <skillRequirements>
            <Crafting>7</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>18</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>12</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Steel</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Ammo_8x55mmCharged>500</Ammo_8x55mmCharged>
        </products>
        <workAmount>13600</workAmount>
    </RecipeDef>

