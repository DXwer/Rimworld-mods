        </graphicData>
        <statBases>
            <Mass>3</Mass>
            <Bulk>9.6</Bulk>
            <MarketValue>100</MarketValue>
        </statBases>
        <tradeTags>
            <li>CE_AutoEnableCrafting</li>
        </tradeTags>
        <thingCategories>
            <li>Ammo84x254mmChargedRockets</li>
        </thingCategories>
        <stackLimit>25</stackLimit>
        <cookOffFlashScale>40</cookOffFlashScale>
        <ammoClass>GrenadeEMP</ammoClass>
        <cookOffProjectile>Bullet_Eccentric84x254mmChargedRockets_EMP</cookOffProjectile>
    </ThingDef>

    <!--EMP Recipe-->

    <RecipeDef ParentName="AmmoRecipeBase">
        <defName>MakeAmmo_84x254mmChargedRockets_EMP</defName>
        <label>make 84x254mm EMP charge rockets x5</label>
        <description>Craft 5 84x254mm EMP rockets.</description>
        <jobString>Making 84x254mm EMP charge rockets.</jobString>
        <researchPrerequisite>Eccentric_ChargedLaunchers</researchPrerequisite>
        <skillRequirements>
            <Crafting>7</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>16</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Ammo_84x254mmChargedRockets_EMP>5</Ammo_84x254mmChargedRockets_EMP>
        </products>
    </RecipeDef>

    <!--EMP Projectile-->

    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_Eccentric84x254mmChargedRockets_EMP</defName>
        <label>84x254mm charge rocket (EMP)</label>
        <thingClass>EccentricProjectiles.ProjectileCE_ExplosiveWithEffects</thingClass>
        <graphicData>
            <texPath>Things/Eccentric/Projectile/CAW5Projectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
            <drawSize>1</drawSize>
        </graphicData>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <speed>64</speed>
            <explosionRadius>2.8</explosionRadius>
            <damageDef>EMP</damageDef>
            <damageAmountBase>95</damageAmountBase>
            <soundAmbient>RocketPropelledLoop_Small</soundAmbient>
        </projectile>
        <modExtensions>
            <li Class="EccentricProjectiles.ModExtension_ProjectileEffects">
                <effects>
                    <li>Eccentric_PulseRocketTrail</li>
                </effects>
            </li>
        </modExtensions>
    </ThingDef>

</Defs>