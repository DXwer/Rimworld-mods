    </ThingDef>

    <!--Standard-->

    <ThingDef ParentName="BaseEccentric12x90mmChargedBullet">
        <defName>Bullet_Eccentric12x90mmCharged</defName>
        <label>12x90mm Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>48</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>12</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>43</armorPenetrationSharp>
