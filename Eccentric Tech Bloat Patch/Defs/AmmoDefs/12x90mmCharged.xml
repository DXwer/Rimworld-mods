        <researchPrerequisite>Eccentric_HighCaliberCharge</researchPrerequisite>
        <skillRequirements>
            <Crafting>7</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>54</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>36</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>18</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Steel</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Ammo_12x90mmCharged>200</Ammo_12x90mmCharged>
        </products>
        <workAmount>22000</workAmount>
    </RecipeDef>

