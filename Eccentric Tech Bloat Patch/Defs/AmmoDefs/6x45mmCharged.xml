    <!--  Projectiles  -->

    <ThingDef Name="BaseEccentric6x45mmChargedBullet" ParentName="Base6x24mmChargedBullet" Abstract="True">
        <thingClass>EccentricProjectiles.ProjectileCE_WithEffects</thingClass>
        <graphicData>
            <texPath>Things/Eccentric/Projectile/ChargeProjectile_Medium</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <modExtensions>
            <li Class="EccentricProjectiles.ModExtension_ProjectileEffects">
                <effects>
                    <li>Eccentric_ChargeMuzzleFlash</li>
                </effects>
            </li>
        </modExtensions>
    </ThingDef>

    <!--Standard-->

    <ThingDef ParentName="BaseEccentric6x45mmChargedBullet">
        <defName>Bullet_Eccentric6x45mmCharged</defName>
        <label>6x45mm Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>18</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>6</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>18</armorPenetrationSharp>
            <armorPenetrationBlunt>32.6</armorPenetrationBlunt>
        </projectile>
    </ThingDef>

