            <Ammo_6x45mmCharged>Bullet_Eccentric6x45mmCharged</Ammo_6x45mmCharged>
            <Ammo_6x45mmCharged_AP>Bullet_Eccentric6x45mmCharged_AP</Ammo_6x45mmCharged_AP>
            <Ammo_6x45mmCharged_Ion>Bullet_Eccentric6x45mmCharged_Ion</Ammo_6x45mmCharged_Ion>
        </ammoTypes>
    </CombatExtended.AmmoSetDef>

    <!--Standard-->

    <ThingDef Class="CombatExtended.AmmoDef" ParentName="SpacerSmallAmmoBase">
        <thingClass>CombatExtended.AmmoThing</thingClass>
        <defName>Ammo_6x45mmCharged</defName>
        <label>6x45mm Charged</label>
        <description>The standard infantry rifle cartridge of the Eccentric.</description>
        <graphicData>
			<texPath>Things/Ammo/Charged/MediumRegular</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
        <statBases>
            <Mass>0.01</Mass>
			<Bulk>0.01</Bulk>
            <MarketValue>0.5</MarketValue>
        </statBases>
        <tradeTags>
            <li>CE_AutoEnableTrade</li>
            <li>CE_AutoEnableCrafting_FabricationBench</li>
        </tradeTags>
        <thingCategories>
            <li>Ammo6x45mmCharged</li>
        </thingCategories>
        <stackLimit>5000</stackLimit>
        <ammoClass>Charged</ammoClass>
    </ThingDef>

    <RecipeDef ParentName="AmmoRecipeBase">
        <defName>MakeAmmo_6x45mmCharged</defName>
        <label>make 6x45mm Charged cartridge x500</label>
        <description>Craft 500 6x45mm Charged cartridges.</description>
        <jobString>Making 6x45mm Charged cartridges.</jobString>
        <researchPrerequisite>Eccentric_ChargedShot</researchPrerequisite>
        <skillRequirements>
            <Crafting>7</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>7</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Steel</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Ammo_6x45mmCharged>500</Ammo_6x45mmCharged>
        </products>
        <workAmount>6800</workAmount>
    </RecipeDef>

